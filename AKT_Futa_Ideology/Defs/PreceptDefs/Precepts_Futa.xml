<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <IssueDef>
    <defName>Futanaris</defName>
    <label>Futanaris</label>
    <iconPath>UI/Icons/Futa_Icon</iconPath>
  </IssueDef>

  <HistoryEventDef>
    <defName>FutanariDied</defName>
    <label>Futanari died</label>
  </HistoryEventDef>

  <HistoryEventDef>
    <defName>PropagateFutanariGene</defName>
    <label>propagate Futanari gene</label>
  </HistoryEventDef>

  <PreceptDef>
    <defName>Futanaris_Revered</defName>
    <issue>Futanaris</issue>
    <label>revered</label>
    <description>Futanaris should be worshipped. Believers will be happy if there is a Futanari in the colony.</description>
    <impact>Medium</impact>
	<associatedMemes>
      <li>FutaSupremacy</li>
    </associatedMemes>
    <comps>
      <li Class="PreceptComp_SituationalThought">
        <thought>Futanaris_Revered_Opinion_Futanari</thought>
        <description>Futanari</description>
      </li>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>FutanariDied</eventDef>
        <thought>FutanariDied_Revered</thought>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>Futanari_ReveredFutanari</thought>
        <description>Revered Futanari</description>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>FutanariColonist_Revered</thought>
        <thoughtStageDescriptions>
          <li>No Futanaris</li>
          <li>No Futanari master</li>
          <li>Futanari master</li>
        </thoughtStageDescriptions>
      </li>
    </comps>
  </PreceptDef>

  <PreceptDef>
    <defName>Futanaris_Reviled</defName>
    <issue>Futanaris</issue>
    <label>reviled</label>
    <description>Anyone who drinks blood to survive is a monster.</description>
    <impact>Medium</impact>
    <comps>
      <li Class="PreceptComp_UnwillingToDo">
        <eventDef>PropagateFutanariGene</eventDef>
        <description>Propagate Futanari gene</description>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>Futanaris_Reviled_Opinion_Futanari</thought>
        <description>Futanari</description>
      </li>
      <li Class="PreceptComp_KnowsMemoryThought">
        <eventDef>FutanariDied</eventDef>
        <thought>FutanariDied_Reviled</thought>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>Futanari_ReviledFutanari</thought>
        <description>Futanari self hatred</description>
      </li>
      <li Class="PreceptComp_SituationalThought">
        <thought>FutanariColonist_Reviled</thought>
        <description>Futanari among us</description>
      </li>
    </comps>
  </PreceptDef>


  <!-- Thoughts -->

  <ThoughtDef>
    <defName>Futanaris_Revered_Opinion_Futanari</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_Futanari_Social</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Futanari</label>
        <baseOpinionOffset>20</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Futanaris_Reviled_Opinion_Futanari</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_Futanari_Social</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Futanari</label>
        <baseOpinionOffset>-40</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>FutanariDied_Revered</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stackLimit>3</stackLimit>
    <durationDays>10</durationDays>
    <stages>
      <li>
        <label>Futanari died</label>
        <description>The Futanaris stand above us, yet one has died here. We will surely be punished for this.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>FutanariDied_Reviled</defName>
    <thoughtClass>Thought_Memory</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <durationDays>10</durationDays>
    <stages>
      <li>
        <label>Futanari died</label>
        <description>The only good Futanari is a dead one.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Futanari_ReveredFutanari</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_IsFutanari</workerClass>
    <stages>
      <li>
        <label>revered Futanari</label>
        <description>Let them worship me. I'm the superior being.</description>
        <baseMoodEffect>8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Futanari_ReviledFutanari</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_IsFutanari</workerClass>
    <stages>
      <li>
        <label>Futanari self hatred</label>
        <description>I am what I hate. I must rid myself of this curse.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>FutanariColonist_Revered</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_FutanariColonist</workerClass>
    <nullifiedIfNotColonist>true</nullifiedIfNotColonist>
    <stages>
      <li>
        <label>no Futanaris</label>
        <description>Without a Futanari master, we are undirected and lost. We should make a Futanari our leader.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>no Futanari master</label>
        <description>Without a Futanari master, we lack proper direction. We should make a Futanari our leader.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
      <li>
        <label>Futanari master</label>
        <description>The Futanari's presence is a great honor. May they live forever.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>FutanariColonist_Reviled</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>AKT_Ideology.ThoughtWorker_Precept_FutanariPresent</workerClass>
    <nullifiedIfNotColonist>true</nullifiedIfNotColonist>
    <stages>
      <li>
        <label>Futanari among us</label>
        <description>One of them walks among us. We should expel the Futanari from our home.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>